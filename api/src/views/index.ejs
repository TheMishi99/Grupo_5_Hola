<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("partials/head") %>
    <title>Home</title>
    <script
      src="https://kit.fontawesome.com/b42ec8045a.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/6d37a11b52.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include("./partials/header") %>
    <main>
      <div class="banner">
        <img src="img/cat-banner-2.gif" width="100%" alt="gift-banner" />
      </div>
      <div class="slider">
        <div id="atras" class="arrow"><img src="img/atras.svg" alt="atras" loading="lazy"></div>
        <div class="imagenes">
          <img id="img" src="img/banner-mishis1.png" alt="banner-promotion" loading="lazy">
        </div>
        <div id="adelante" class="arrow"><img src="img/adelante.svg" alt="adelante" loading="lazy"></div>
        <div class="puntos" id="puntos"></div>      
      </div>
      <div class="recent-products">
        <h3>Productos m√°s recientes</h3>
        <h4><a href="/products">Ver todos los productos ></a></h4>
      </div>
      <div class="container">
        <% latestProducts.forEach(product => { %>
        <article>
          <div class="products-img">
            <% if (product.img) { %>
              <% if(product.img.includes("https")){%>
                <img
                src="<%= product.img %>"
                width="70%"
                alt="<%= product.name %>"
                />
              <%}else{%>
                <img
                src="/img/<%= product.img %>"
                width="70%"
                alt="<%= product.name %>"
                />
              <%}%>
              <% } else { %>
              <img
                src="../img/img_notfound.png"
                width="100%"
                alt="<%= product.name %>"
              />
              <% } %>
          </div>
          <div class="product-name">
            <p><%= product.name %></p>
          </div>
          <div class="product-price">
            <h3>$ <%= product.price %></h3>
          </div>
          <a href="/products/<%= product.id %>">
            <div class="bottom-buy"><strong>Comprar</strong></div>
          </a>
        </article>
        <% }) %>
      </div>

      <div class="recent-products">
        <h3>Promociones vigentes</h3>
        <h4><a href="/products/allOffers">Ver todas las promociones ></a></h4>
      </div>
      <div class="container">
        <% off.forEach(product => { %>
        <article>
          <div class="promotion">
            <% discounts.forEach(discount => { %>
              <h2><% if (product.discount_id == discount.id){%><%= discount.description %><%}%></h2>
            <% }); %> 
          </div>
          <div class="products-img">
            <% if (product.img) { %>
              <% if(product.img.includes("https")){%>
                <img
                src="<%= product.img %>"
                width="70%"
                alt="<%= product.name %>"
                />
              <%}else{%>
                <img
                src="/img/<%= product.img %>"
                width="70%"
                alt="<%= product.name %>"
                />
              <%}%>
            <% } else { %>
            <img
              src="../img/img_notfound.png"
              width="100%"
              alt="<%= product.name %>"
            />
            <% } %>
          </div>
          <div class="product-name">
            <p><%= product.description %></p>
          </div>
          <div class="product-price">
            <h3>$ <%= product.price %></h3>
          </div>
          <a href="/products/<%= product.id %>">
            <div class="bottom-buy"><strong>Comprar</strong></div>
          </a>
        </article>
        <% }) %>
      </div>

      <div class="recent-products" id="marcas">
        <h3>Nuestras marcas</h3>
      </div>
      <div class="carousel-container">
        <div class="carousel-slide">
          <img src="../img/banner-brands.png" alt="Imagen 1">
          <img src="../img/1.png" alt="Imagen 2">
          <img src="../img/2.png" alt="Imagen 3">
          <img src="../img/3.png" alt="Imagen 4">
          <img src="../img/4.png" alt="Imagen 5">
          <img src="../img/5.png" alt="Imagen 6">  
        </div>
        <div class="button-container">
        <button id="prevBtn">Anterior</button>
        <button id="nextBtn">Siguiente</button>
      </div>
    </div> 
    </main>
    <script src="/js/index.js"></script>
    <%- include("./partials/footer") %>
  </body>
</html>
