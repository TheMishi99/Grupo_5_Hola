<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("../partials/head") %>
    <title>Modify Product</title>
    <script
      src="https://kit.fontawesome.com/b42ec8045a.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/6d37a11b52.js"
      crossorigin="anonymous"
    ></script>
    <link href="../../css/home-style.css" rel="stylesheet" />
  </head>

  <body>
    <%- include("../partials/header") %>
    <main>
      <div class="container__modifyProducts">
        <h1>Modifying</h1>
        <label for="modifyProduct"
          >Elige el producto que desees modificar</label
        >
        <br />
        <select name="modifyProduct" id="modifyProduct">
          <% list.forEach(product => { %>
          <option value="<%= product.id %>"><%= product.titulo %></option>
          <% }) %>
        </select>
      </div>
    </main>
    <%- include("../partials/footer") %>
  </body>
</html>
