<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carrito de producto</title>
    <%- include("../partials/head") %>
    <script
      src="https://kit.fontawesome.com/b42ec8045a.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/6d37a11b52.js"
      crossorigin="anonymous"
    ></script>
    <!--Hoja de Estilo para carrito de producto-->
    <link href="../css/productCart-style.css" rel="stylesheet" />
  </head>

  <body>
    <%- include("../partials/header") %>
    <main>
      <div class="product-cart">
        <div class="name-page">
          <i class="fa-solid fa-basket-shopping" style="color: #ffffff"></i>
          <h2>Carrito de Compras</h2>
        </div>
        <!--Add Tags-->
        <% list.forEach((product,index) => { %>
        <div class="single-product">
          <div class="container-line">
            <div class="product-img">
              <img src="<%= product.img %>" alt=" " />
            </div>
            <div class="product-name">
              <p><strong>Nombre</strong><br>
              <%= product.name %></p>
            </div>
            <div class="product-details">
              <p><strong>Código</strong> <%= product.code %></p>
              <!-- <p>Características: <%= product.description %></p> -->
              <p><strong>Brand</strong> <%= product.brand.name %></p>
              <p><strong>Category</strong> <%= product.categories.name %></p>
            </div>
          </div>
          <div class="container-line">
            <div class="cant">
              <div class="icons-math">
                <i class="fa-solid fa-minus" style="color: #000000"></i>
              </div>
              <h3>1</h3>
              <div class="icons-math">
                <i class="fa-solid fa-plus" style="color: #000000"></i>
              </div>
            </div>
            <div class="total">
              <h3>$ <%= product.price %></h3>
            </div>
          </div>
          <form action="/products/cart/<%= cart[index].CarritoProductos.id %>?_method=DELETE" method="POST">
            <button type="submit" class="delete_button">
              <i class="fa-solid fa-xmark" style="color: #000000"></i>
            </button>
          </form>
        </div>
        <% }) %>

        <div class="discount">
          <h3>¿Tenés un cupón de descuento?</h3>
          <br />
          <form action="procesar_cupon.php" method="post">
            <input class="cupon" type="text" id="cupon" name="cupon" />
            <input type="submit" value="Añadir" />
          </form>
        </div>
        <div class="resumen">
          <% let subTotal = 0%> <% let discounts = 0%> <% list.forEach(product => { %> 
            <% subTotal += parseFloat(product.price) %> 
            <% discounts += parseFloat(product.price) * (product.discount.quantity/100)%> 
          <% }) %>
          <h3>SubTotal $ <%= subTotal %></h3>
          <br />
          <h3>Descuento: $ <%= discounts %></h3>
          <br />
          <h2>Total: $ <%= (subTotal - discounts).toFixed(2) %></h2>
        </div>
        <div class="cart__buttons">
          <button class="cart__button">Seguir comprando</button>
          <button class="cart__button">Pagar</button>
        </div>
      </div>
    </main>
    <%- include("../partials/footer") %>
  </body>
</html>
